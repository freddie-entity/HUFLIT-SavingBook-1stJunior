@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/bootswatch/bootstrap.css" rel="stylesheet" />

<h1 style="margin:50px;" class="text-center">
    <i class=" fas fa-user-shield text-success mr-3"></i>
    Role Management
</h1>

<hr />

@if (Model.Any())
{
<div class="text-center">
    <a class="btn btn-success mb-3"  asp-controller="administration" asp-action="CreateRole">
    
        <i class="fas fa-plus"></i>
        Create New Role
    
    </a>
</div>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer text-right">
                <a class="btn btn-success" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">

                    <i class="fas fa-edit"></i>
                    Edit

                </a>
                <a asp-action="DeleteRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-danger" onclick="return confirm('Are you sure to delete @role.Name ?')"><i class="fas fa-trash"></i>Delete</a>
                
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}