@model test.Areas.Admin.ViewModels.EditRoleViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/bootswatch/bootstrap.css" rel="stylesheet" />

<h1 class="text-center">
    <i class="fas fa-edit text-success mr-2"></i>
    Edit role
</h1>

<hr />

<form method="post" class="mt-3">
    <div class="form-group">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10"><input asp-for="Id" disabled class="form-control" /></div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label">Role Name</label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="text-center mb-3">
            <button type="submit" class="btn btn-success">Update</button>
            <a class="btn btn-dark" asp-controller="Administration" asp-area="Admin" asp-action="RoleList">Back</a>

        </div>
    </div>

    <hr />

    <div class="card">
        <div class="card-header text-center">
            <h3>
                <i class="fas fa-address-card text-success mr-3"></i>
                Users in this role
            </h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            { <h5 class="card-title">None at the moment</h5>}
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-success" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" asp-controller="Administration" style="width:auto">Add or Remove Users</a>
        </div>
    </div>
</form>