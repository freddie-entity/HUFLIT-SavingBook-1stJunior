@model test.Models.BookType

@{
    Layout = "_Layout";
}

<link href="~/lib/bootswatch/bootstrap.css" rel="stylesheet" />


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h2 style="margin: 50px" class="text-center">BookType</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="BookTypeUpdate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdBookType" />
                <div class="form-group">
                    <label asp-for="NameBookType" class="control-label"></label>
                    <input asp-for="NameBookType" class="form-control" />
                    <span asp-validation-for="NameBookType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="mb-3">
        <a style="width: 90px" class="btn btn-dark btn-sm" asp-action="Index">

            <i class="fas fa-arrow-left"></i>

        </a>
    </div>

</body>
</html>
