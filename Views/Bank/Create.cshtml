@model test.Models.Bank

@{
    ViewData["Title"] = "Create";
}

<link href="~/lib/bootswatch/bootstrap.css" rel="stylesheet" />


<h1 class="text-center">
    <i class="fas fa-university text-success mr-2"></i>
    New Bank</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBank" />
            <div class="form-group">
                <label asp-for="NameBank" class="control-label"></label>
                <input asp-for="NameBank" class="form-control" />
                <span asp-validation-for="NameBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressBank" class="control-label"></label>
                <input asp-for="AddressBank" class="form-control" />
                <span asp-validation-for="AddressBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a style="width: 90px" class="btn btn-dark btn-sm" asp-action="Index">

        <i class="fas fa-arrow-left"></i>

    </a>
</div>

