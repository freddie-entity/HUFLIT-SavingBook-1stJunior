@model test.ViewModels.RegisterViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Account/_LoginPartialView.cshtml";
}

<hr />
<h1 class="text-center">User Registration</h1>

<div class="row">
    <div class="col-md-11 ">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdS">Staff ID</label>
                <input asp-for="IdS" class="form-control" />
                <span asp-validation-for="IdS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-group-sm">Register Account</button>
            </div>
            <div class="mb-3">
                <a style="width: 90px" class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">

                    <i class="fas fa-arrow-left"></i>

                </a>
            </div>
            <hr />
        </form>
    </div>
</div>
